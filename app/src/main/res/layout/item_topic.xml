<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_topic"
            android:layout_marginTop="10dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_below="@id/iv_topic"
            android:background="@drawable/attention_dr"
            android:text="关注"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/topic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_topic"
            android:textColor="@android:color/black"
            tools:text="专题作者" />

        <TextView
            android:id="@+id/topic_article_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/topic_author"
            android:layout_below="@id/topic_author"
            android:layout_marginTop="5dp"
            tools:text="5134" />

        <TextView
            android:id="@+id/topic_attention_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/topic_article_num"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/topic_article_num"
            tools:text="5134" />

        <TextView
            android:id="@+id/topic_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/topic_article_num"
            android:layout_below="@id/topic_article_num"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@android:color/darker_gray"
            tools:text="专题描述专题描述专题描述专题描述专题描述" />


    </RelativeLayout>
</android.support.v7.widget.CardView>