            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.ArticleDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.TopicDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
